# Database
DATABASE_URL=postgresql+asyncpg://campaign_user:campaign_pass@localhost:5432/campaign_db

# Media Storage
MEDIA_STORAGE_PATH=./media

# Security
SECRET_KEY=your-super-secret-key-change-in-production

# X (Twitter) OAuth - leave as mock for local dev
X_CLIENT_ID=mock_client_id
X_CLIENT_SECRET=mock_client_secret
X_REDIRECT_URI=http://localhost:8000/v1/x/oauth/callback

# Feature Flags
FEATURE_X_POSTING=false

# Scheduler
SCHEDULER_INTERVAL_SECONDS=60
